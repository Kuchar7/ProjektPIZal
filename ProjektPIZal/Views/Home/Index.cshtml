@model IEnumerable<ProjektPIZal.Models.ViewModels.TeaVM>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeaID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeaID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            <img src="@Url.Content(item.Photo)" alt="Image" height="100" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Details", new {id=item.TeaID})
        </td>
    </tr>
}

</table>
